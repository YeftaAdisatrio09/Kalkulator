<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvExpresion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/txt3"
            android:textSize="30sp"
            android:gravity="end"
            android:maxLines="1"
            android:layout_marginTop="100dp"
            android:text="Ilopeyou"/>

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/txt3"
            android:textSize="48sp"
            android:gravity="end"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Ilopeyoutoo"
            android:maxLines="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvac"
                style="@style/btn3"
                android:background="@color/btn"
                android:text="AC"/>
            <TextView
                android:id="@+id/tvminpuls"
                style="@style/btn3"
                android:background="@color/btn"
                android:text="+/-"/>
            <TextView
                android:id="@+id/tvc"
                style="@style/btn3"
                android:background="@color/btn"
                android:text="C"/>
            <TextView
                android:id="@+id/tvBagi"
                style="@style/btn2"
                android:background="@color/btn"
                android:text="/"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTujuh"
                style="@style/btn1"
                android:background="@color/bg"
                android:text="7"/>
            <TextView
                android:id="@+id/tvDelapan"
                style="@style/btn1"
                android:background="@color/bg"
                android:text="8"/>
            <TextView
                android:id="@+id/tvSembilan"
                style="@style/btn1"
                android:background="@color/bg"
                android:text="9"/>
            <TextView
                android:id="@+id/tvKali"
                style="@style/btn2"
                android:background="@color/btn"
                android:text="X"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvEmpat"
                style="@style/btn1"
                android:background="@color/bg"
                android:text="4"/>
            <TextView
                android:id="@+id/tvLima"
                style="@style/btn1"
                android:background="@color/bg"
                android:text="5"/>
            <TextView
                android:id="@+id/tvEnam"
                style="@style/btn1"
                android:background="@color/bg"
                android:text="6"/>
            <TextView
                android:id="@+id/tvKurang"
                style="@style/btn2"
                android:background="@color/btn"
                android:text="-"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSatu"
                style="@style/btn1"
                android:background="@color/bg"
                android:text="1"/>
            <TextView
                android:id="@+id/tvDua"
                style="@style/btn1"
                android:background="@color/bg"
                android:text="2"/>
            <TextView
                android:id="@+id/tvTiga"
                style="@style/btn1"
                android:background="@color/bg"
                android:text="3"/>
            <TextView
                android:id="@+id/tvTambah"
                style="@style/btn2"
                android:background="@color/btn"
                android:text="+"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvnolnol"
                style="@style/btn1"
                android:background="@color/bg"
                android:text="00"/>
            <TextView
                android:id="@+id/tvnol"
                style="@style/btn1"
                android:background="@color/bg"
                android:text="0"/>
            <TextView
                android:id="@+id/tvtitik"
                style="@style/btn1"
                android:background="@color/bg"
                android:text="."/>
            <TextView
                android:id="@+id/tvsamadengan"
                style="@style/btn2"
                android:background="@color/btn"
                android:text="="/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>